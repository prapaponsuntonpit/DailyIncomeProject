<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background2"
    tools:context=".PaymoneyPage">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="  รายจ่าย"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/background_round_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text=" จำนวนเงิน"
            android:layout_width="50pt"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pay_money"
            android:background="@android:color/white"
            android:gravity="right"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/background_round_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text=" วันที่"
            android:layout_width="50pt"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pay_date_money"
            android:background="@android:color/white"
            android:layout_gravity="center"
            android:hint="วว/ดด/ปป"
            android:drawableRight="@drawable/calendar"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:editable="false"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/background_round_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text=" เวลา"
            android:layout_width="50pt"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pay_time_money"
            android:background="@android:color/white"
            android:layout_gravity="center"
            android:hint="ชช/นน"
            android:drawableRight="@drawable/ic_access_time_black_24dp"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:editable="false"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel_get_money"
            android:padding="10dp"
            android:textSize="20sp"
            android:background="#66e25793"
            android:text="ยกเลิก"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/submit_get_money"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:background="#4777e257"
            android:textSize="20sp"
            android:text="ยืนยัน"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>