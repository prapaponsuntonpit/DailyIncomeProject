<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/background2"
    tools:context=".SavemonryPage">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <ImageView
          android:background="@drawable/income"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:textColor="@android:color/black"
          android:textStyle="bold"
          android:textSize="26sp"
          android:text="สมุดเงินฝาก"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TableLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TableRow>
        <TextView
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="จำนวนเงินฝาก"
            />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            />
        <EditText
            android:id="@+id/number_save_input"
            android:inputType="number"
            android:gravity="right"
            android:padding="10dp"
            android:background="@drawable/background_round_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:lines="1"
            />
      </TableRow>
      <TableRow android:layout_marginTop="10dp">
        <TextView
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="วันที่"
            />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            />
        <EditText
            android:id="@+id/date_save_input"
            android:inputType="number"
            android:padding="10dp"
            android:editable="false"
            android:hint="วว/ดด/ปป"
            android:gravity="center"
            android:drawableRight="@drawable/calendar"
            android:background="@drawable/background_round_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
      </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/btn_save_activity"
        android:background="#5f77e257"
        android:textSize="20sp"
        android:text="บันทึก"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>