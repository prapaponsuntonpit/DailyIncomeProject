<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".RegisterPage">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:layout_marginTop="15dp"
               android:layout_gravity="center"
               android:background="@drawable/logo_daily"
               android:layout_width="150dp"
               android:layout_height="150dp" />
          <TableLayout
              android:padding="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TableRow
                  android:gravity="center"
                  >
                  <TextView
                      android:textSize="18sp"
                      android:text="ชื่อ-นามสกุล"
                      />
                  <EditText
                      android:id="@+id/full_name_regis"
                      android:layout_marginLeft="15dp"
                      android:padding="10dp"
                      android:background="@drawable/background_round_1"
                      android:layout_height="wrap_content"
                      android:layout_width="230dp"
                      android:lines="1"
                      />
              </TableRow>
              <TableRow
                  android:layout_marginTop="10dp"
                  android:gravity="center"
                  >
                  <TextView
                      android:textSize="18sp"
                      android:text="E-mail"
                      />
                  <EditText
                      android:id="@+id/email_regis"
                      android:layout_marginLeft="15dp"
                      android:padding="10dp"
                      android:background="@drawable/background_round_1"
                      android:layout_height="wrap_content"
                      android:layout_width="230dp"
                      android:lines="1"
                      />
              </TableRow>
              <TableRow
                  android:layout_marginTop="10dp"
                  android:gravity="center"
                  >
                  <TextView
                      android:textSize="17sp"
                      android:text="เบอร์โทรศัทพ์"
                      />
                  <EditText
                      android:id="@+id/phone_regis"
                      android:layout_marginLeft="15dp"
                      android:padding="10dp"
                      android:background="@drawable/background_round_1"
                      android:layout_height="wrap_content"
                      android:layout_width="230dp"
                      android:lines="1"
                      />
              </TableRow>
              <TableRow
                  android:layout_marginTop="10dp"
                  android:gravity="center"
                  >
                  <TextView
                      android:textSize="17sp"
                      android:text="รหัสผ่าน"
                      />
                  <EditText
                      android:id="@+id/password_regis"
                      android:layout_marginLeft="15dp"
                      android:padding="10dp"
                      android:inputType="textPassword"
                      android:background="@drawable/background_round_1"
                      android:layout_height="wrap_content"
                      android:layout_width="230dp"
                      android:lines="1"
                      />
              </TableRow>
              <TableRow
                  android:layout_marginTop="10dp"
                  android:gravity="center"
                  >
                  <TextView
                      android:textSize="16sp"
                      android:text="ยืนยันรหัสผ่าน"
                      />
                  <EditText
                      android:id="@+id/re_password_regis"
                      android:layout_marginLeft="15dp"
                      android:padding="10dp"
                      android:inputType="textPassword"
                      android:background="@drawable/background_round_1"
                      android:layout_height="wrap_content"
                      android:layout_width="230dp"
                      android:lines="1"
                      />
              </TableRow>
          </TableLayout>
           <LinearLayout
               android:gravity="center"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <Button
                   android:id="@+id/cancel_btn"
                   android:textSize="20sp"
                   android:text="ยกเลิก"
                   android:background="@drawable/background_round_1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <Button
                   android:id="@+id/submit_btn"
                   android:textSize="20sp"
                   android:text="ยืนยัน"
                   android:background="@drawable/background_round_1"
                   android:layout_marginLeft="40dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
       </LinearLayout>
   </ScrollView>
</LinearLayout>